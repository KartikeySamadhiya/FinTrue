<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.financemanager.controller.DashboardController">
    <padding>
        <Insets top="20" bottom="20" left="20" right="20"/>
    </padding>

    <top>
        <VBox spacing="10">
            <Label text="FinTrue Dashboard" style="-fx-font-size: 28px; -fx-font-weight: bold;"/>
            <HBox spacing="20" alignment="CENTER">
                <Label fx:id="totalBalanceLabel" text="/$0.0" style="-fx-font-size: 24px;"/>
                <Label fx:id="totalExpensesLabel" text="Expenses: $0" style="-fx-font-size: 18px;"/>
                <Label fx:id="totalIncomeLabel" text="Income: $0" style="-fx-font-size: 18px;"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <HBox spacing="20">
            <VBox>
                <Label text="Expense categories" style="-fx-font-size: 16px;"/>
                <PieChart fx:id="expensePieChart" title="Expense by Categories"/>
            </VBox>

            <VBox>
                <Label text="Recent Transactions" style="-fx-font-size: 16px;"/>
                <TableView fx:id="transactionsTable">
                    <columns>
                        <TableColumn text="Date" prefWidth="80" fx:id="dateCol"/>
                        <TableColumn text="Description" prefWidth="150" fx:id="descCol"/>
                        <TableColumn text="Category" prefWidth="180" fx:id="categoryCol"/>
                        <TableColumn text="Amount" prefWidth="80" fx:id="amountCol"/>
                    </columns>
                </TableView>
            </VBox>
        </HBox>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Add Expense" onAction="#onAddExpense"/>
            <Button text="Add Income" onAction="#onAddIncome"/>
            <Button text="Logout" onAction="#onLogout"/>
        </HBox>
    </bottom>
</BorderPane>



